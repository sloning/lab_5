<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="445.0" xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="FXMLControllers.AdController">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="364.0" minHeight="10.0" prefHeight="364.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="194.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox alignment="CENTER" prefHeight="371.0" prefWidth="549.0" GridPane.hgrow="ALWAYS"
                      GridPane.vgrow="ALWAYS">
                    <children>
                        <ImageView fitHeight="371.0" fitWidth="458.0" pickOnBounds="true" preserveRatio="true"
                                   VBox.vgrow="ALWAYS">
                            <viewport>
                                <Rectangle2D minX="600.0" minY="360.0"/>
                            </viewport>
                            <image>
                                <Image url="@../../../../../ad1.jpg"/>
                            </image>
                        </ImageView>
                    </children>
                </VBox>
                <GridPane prefHeight="10.0" prefWidth="445.0" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Button fx:id="adGOButton" mnemonicParsing="false" onAction="#adGO" text="Я в деле!"/>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                            <children>
                                <Button fx:id="adCloseButton" mnemonicParsing="false" onAction="#adClose"
                                        text="Закрыть"/>
                            </children>
                        </VBox>
                    </children>
                </GridPane>
            </children>
        </GridPane>
    </children>
</VBox>
